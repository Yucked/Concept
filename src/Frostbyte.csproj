<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <LangVersion>8.0</LangVersion>
        <ApplicationIcon>..\Icon.ico</ApplicationIcon>
        <TargetFramework>netcoreapp3.0</TargetFramework>

        <PublishTrimmed>true</PublishTrimmed>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <TieredCompilationQuickJit>true</TieredCompilationQuickJit>
    </PropertyGroup>

    <ItemGroup>
        <None Remove="Binaries\x86\libopus.dll" />
        <None Remove="Binaries\x86\libsodium.dll" />
        <None Remove="Binaries\x64\libopus.dll" />
        <None Remove="Binaries\x64\libsodium.dll" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Colorful.Console" Version="1.2.9" />
        <PackageReference Include="System.Text.Json" Version="4.6.0-preview6.19303.8" />
    </ItemGroup>

    <ItemGroup>
        <Resource Include="Binaries\x86\libopus.dll">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Resource>
        <Resource Include="Binaries\x86\libsodium.dll">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Resource>
        <Resource Include="Binaries\x64\libopus.dll">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Resource>
        <Resource Include="Binaries\x64\libsodium.dll">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Resource>
    </ItemGroup>

</Project>
